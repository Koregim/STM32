#define I2C_ADDR = 0x4e;	// 0x27 << 1 == 0x4e

void lcd_command (char cmd)
{
	char n1, n2;
	n1 = cmd & 0xf0;
	n2 = cmd & 0x0f;
}
void lcd_data (char ch)
{

}
void lcd_init()
{
	lcd_command(0x01);	// screen clear
	lcd_command(0x02); 	// corsor home
	lcd_command(0x06);	//
	lcd_command(0x0f);
}
