extern I2C_HandleTypeDef *hi2c;
//extern I2C_HandleTypeDef hi2c1;	// not recommanded
#define I2C_ADDR = 0x4e;	// 0x27 << 1 == 0x4e

void lcd_command (char cmd)		// cmd_bit : abcd_efgh
{
	char n1, n2;
	n1 = cmd & 0xf0;			// n1 : abcd_0000, upper nibble
	n2 = (cmd & 0x0f) << 4;		// n2 : efgh_0000, lower nibble
}
void lcd_data (char ch)			// control signal(4bit) : ReadWrite/ Enable / NoConnection(무조건 HIGH) / RS
{

}
void lcd_init()
{
	lcd_command(0x01);	// screen clear
	lcd_command(0x02); 	// corsor home
	lcd_command(0x06);	//
	lcd_command(0x0f);
}
